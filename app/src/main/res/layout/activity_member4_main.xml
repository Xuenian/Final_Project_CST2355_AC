<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Member4MainActivity">

    <LinearLayout
        android:id="@+id/buttonBarM4"
        style="@android:style/ButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/member4Btn1"
            style="@android:style/ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button1_name"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/member4Btn2"
            style="@android:style/ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button2_name"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/member4Btn3"
            style="@android:style/ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button3_name"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewM4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonBarM4"
        android:text="@string/button4_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/ListViewM4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewM4"
        android:layout_above="@+id/ProgressBarM4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="6dp" />

    <ProgressBar
        android:id="@+id/ProgressBarM4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SearchButtonM4"
        android:layout_margin="5dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/SearchStationM4"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginRight="-2dp"
        android:layout_marginBottom="0dp"
        android:layout_toLeftOf="@+id/SearchButtonM4"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="460dp" />

    <Button
        android:id="@+id/SearchButtonM4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="@string/m4_searchbtn"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="460dp" />

</RelativeLayout>